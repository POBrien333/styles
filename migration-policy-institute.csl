<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="note" version="1.0" page-range-format="chicago" demote-non-dropping-particle="sort-only">
  <info>
    <title>Migration Policy Institute</title>
    <title-short>MPI</title-short>
    <id>http://www.zotero.org/styles/migration-policy-institute</id>
    <link href="http://www.zotero.org/styles/migration-policy-institute" rel="self"/>
    <link href="http://www.zotero.org/styles/philosophy-and-public-affairs" rel="template"/>
    <author>
      <name>Patrick O'Brien</name>
    </author>
    <category citation-format="note"/>
    <category field="generic-base"/>
    <updated>2022-09-04T07:45:54+00:00</updated>
